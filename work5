import java.util.Random;
import java.util.Scanner;

public class ArrayOrderCheck {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        System.out.print("Введіть розмір масиву: ");
        int size = scanner.nextInt();

        System.out.print("Оберіть перевірку (1 — зростання, 2 — спадання): ");
        int choice = scanner.nextInt();

        int[] array = new int[size];

        for (int i = 0; i < size; i++) {
            array[i] = random.nextInt(100);
            System.out.print(array[i] + " ");
        }

        boolean ordered = true;

        for (int i = 0; i < size - 1; i++) {
            if (choice == 1 && array[i] > array[i + 1]) {
                ordered = false;
                break;
            }
            if (choice == 2 && array[i] < array[i + 1]) {
                ordered = false;
                break;
            }
        }

        if (ordered) {
            System.out.println("\nМасив відповідає обраній умові");
        } else {
            System.out.println("\nМасив НЕ відповідає обраній умові");
        }
    }
}
